// Focus+Context via Brushing

#map
	height 400px

svg
	font 10px sans-serif

// path
// 	fill steelblue

.axis path,
.axis line
	fill none
	stroke #000
	shape-rendering crispEdges

// .x.axis path
// 	display none

.line
	fill none
	stroke black
	stroke-width 0.75px

.line.line0
	stroke steelblue

.line1
	stroke indianred

.line2
	stroke seagreen

.brush .extent
	stroke #fff
	fill-opacity .125
	shape-rendering crispEdges

// from d3 example

.axis path,
.axis line
	fill none
	stroke #000
	shape-rendering crispEdges

.line
	stroke black
	fill none
	stroke-width 0.75px
	&.line0
		stroke steelblue
	&.line1
		stroke indianred

.overlay
	fill none
	pointer-events all

.focus
	circle
		fill none
		&.y0
			stroke blue
		&.y1
			stroke red
	line
		stroke purple
		shape-rendering crispEdges
		&.y0
			stroke steelblue
			stroke-dasharray 3 3
			opacity .5
		&.y1
			stroke indianred
			stroke-dasharray 3 3
			opacity .5

.brush
	.extent
		stroke #fff
		fill-opacity .125
		shape-rendering crispEdges

