// modal

.modal-backdrop.am-fade {
  opacity: .5;
  transition: opacity .15s linear;
  &.ng-enter {
    opacity: 0;
    &.ng-enter-active {
      opacity: .5;
    }
  }
  &.ng-leave {
    opacity: .5;
    &.ng-leave-active {
      opacity: 0;
    }
  }
}

// global

body
	padding-top 50px // menu bar

.triangle
	font-size 0.8em
	color #428bca

#raw-data
	height 400px
	width 96%
	margin 0 auto

// table view

tr.selected
	background-color #eef

tr.selected:hover
	background-color #ccf

a.unselected
	color indianred !important

a.selected
	color palegreen !important


tbody tr:hover
	background-color #ffc

td.name
	width 200px

td.destroy
	text-align center
	font-weight bold
	color indianred
	width 2.2em

td.destroy:hover
	background-color indianred
	color white

li .disabled
	a .red
